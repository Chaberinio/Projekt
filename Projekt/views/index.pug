doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='style.css')
  title Moja biblioteka
  style.
    body{
    margin: 0;
    padding: 0;
    font-family: comicsans, serif;
    max-width: 100vw;
    max-height: 100%;
    }
    .main {
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    /* background: url("http://localhost:3000/ac2.jpg") no-repeat; */
    background: url("ac2.jpg") no-repeat;
    background-size: 100%;
    }
    .banner {
    margin: 0;
    padding: 0;
    float: left;
    text-align: center;
    grid-area: banner;
    color: white;
    background :rgba(0,0,0,0.9);
    backdrop-filter: blur(0.5rem);
    }
    .container {
    margin: 0;
    padding: 0;
    clear: both;
    float: left;
    grid-area: container;
    text-align: center;
    color: white;
    background :rgba(0,0,0,0.9);
    backdrop-filter: blur(0.5rem);
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
    align-content: center;
    }
    .footer {
    margin: 0;
    padding: 0;
    clear: both;
    float: left;
    grid-area: footer;
    text-align: center;
    color: white;
    background :rgba(0,0,0,0.9);
    backdrop-filter: blur(0.5rem);
    }
    .main {
    display: grid;
    grid-template-columns:0.2fr 0.6fr 0.2fr ;
    grid-template-rows: .5fr 3fr .2fr;
    grid-template-areas:
    ". banner ."
    ". container ."
    ". footer .";
    }
    .menuItem {
    display: block;
    margin: 2rem 4rem;
    font-size: 1.8rem;
    width: 20rem;
    color: white;
    text-decoration: none;
    background-color: gray;
    border-radius: 15px;
    transition: box-shadow 1.5s;
    transition: transform .3s;
    }
    .menuItem:hover {
    transform: scale(1.15) translate(4px, 4px);
    box-shadow: 0 0 50px 15px rgba(0,0,0,.5);
    }
    .hamburger {
    position: fixed;
    z-index: 100;
    top: 1rem;
    right: 1rem;
    padding: 4px;
    border: black solid 1px;
    background: white;
    cursor: pointer;
    }
    .closeIcon {
    display: none;
    }
    .menu {
    position: fixed;
    transform: translateY(-100%);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
    background: white;
    color: white;
    list-style: none;
    padding-top: 4rem;
    backdrop-filter: blur(1rem);
    transition: transform .4s;
    }
    .showMenu {
    transform: translateY(0);
    }
    .navigationButtonLink{
    text-decoration: none;
    font-size: 3rem;
    color: white;
    }
    .navigationButton {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    align-content: center;
    transition: box-shadow 1.5s;
    transition: transform .3s;
    border-radius: 30px;;
    width: 30rem;
    height: 5rem;
    background-color: rgba(0,0,0, .4);
    }
    .navigationButton:hover{
    transform: scale(1.15) translate(4px, 4px);
    box-shadow: 0px 0px 80px 20px rgba(114, 114, 119, 1);
    }
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
